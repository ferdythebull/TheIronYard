            <textarea class="form-control" rows="10" id="new_post" name="blog[blog_post]"></textarea>

          <ul class="pager">
            <li><button href="/" class="btn">Cancel</button></li>
            <li><input type="submit" value="Post" class="btn btn-primary"></li>
          </ul>
        </form>

