.row
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin", role: "form" } ) do |f|
    = devise_error_messages!
    
    .row{style: "padding-bottom: 12px"}
      %h1.form-signin-heading{style: "text-align:center"} Sign Up
    
    .row{style: "padding-bottom: 12px"}
      .form-group
        .col-md-6{style: "margin-right: 4px"}         
          = f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "First Name"
        .col-md-6{style: "margin-left: 4px"}
          = f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Last Name"
    .row{style: "padding-bottom: 12px"}
      .form-group
        .col-md-12
          = f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email"

    .row{style: "padding-bottom: 12px"}
      .form-group
        .col-md-6{style: "padding-right: 4px"}
          = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password"
        .col-md-6{style: "padding-left: 4px"}
          = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password"

    .row{style: "padding-bottom: 12px"}
      .form-group
        .col-md-12
          = f.text_field :zip_code, autocomplete: "off", class: "form-control", placeholder: "Zip Code"

    .row{style: "padding-bottom: 12px"}
      .form-group
        .col-md-12
          = f.text_field :birthday, autocomplete: "off", class: "form-control", placeholder: "Birthday (optional)"

    .row{style: "padding-bottom: 12px"}
      .form-group
        .col-md-12
          = f.submit "Sign up", class: "btn btn-success btn-block"
          = render "devise/shared/links"
