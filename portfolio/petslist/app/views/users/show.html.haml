%ol.breadcrumb
  %li
    =link_to "Home", root_path
  %li.active
    #{@user.name}

.col-md-12
  .col-md-3
    = render 'my_pets'
  .col-md-6
    %h1 #{@user.name}
    %h3 #{@user.nickname}

    - @user.images.each do |image|
      %p=image_tag(image.image.url :large)

    %p
      %strong I'm #{@user.nickname} and this is what I love: 
      #{@user.i_love}

  .col-md-3
    .row
      = render 'user_buttons'
    .row
      = render 'more_info'