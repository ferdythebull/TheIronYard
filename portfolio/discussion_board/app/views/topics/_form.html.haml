.row

= form_for [@forum, @topic] do |f|
  - if params[:forum]
    %input#topic_forum_id{name: "topic[forum_id]", type: "hidden", value: params[:forum]}/
  .form-group
    = f.label :name
    = f.text_field :name
  .form-group
    = f.fields_for :posts do |post|
      =post.label :content
      =post.text_area :content
  =f.submit "Create", class: "btn btn-default"