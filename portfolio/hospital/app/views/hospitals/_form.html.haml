= form_for @hospital do |f|
  %table
    %tr
      %td
        = f.label :name
      %td
        = f.text_field :name, placeholder: "Enter name here", class: "name"
        .required Edit name to continue
    %tr
      %td
        = f.label :location
      %td
        = f.text_field :location, placeholder: "Enter location here", class: "location"
    %tr
      %td
        = f.submit "Submit", class: "submit"
      %td
        = link_to "Go back", root_path