.row
  %h2 Sign up

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    %form{role: "form"}
      .form-group
        = f.label :email
        = f.text_field :email, required: true, autofocus: true
      .form-group
        = f.label :name
        = f.text_field :name, required: true
      .form-group
        = f.select :user_type, options_for_select(User::USER_TYPES, f.object.user_type)
      .form-group
        = f.label :password
        = f.text_field :password, required: true
      .form-group
        = f.label :password_confirmation
        = f.text_field :password_confirmation, required: true

      = f.button "Sign up", class: "btn btn-default"

  = render "devise/shared/links"