%ul.nav.nav-pills
  %li.dropdown
    %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
      My Dashboard
      %b.caret
    %ul.dropdown-menu
      %li
        = link_to "My Dashboard", dashboard_index_path
      %li.divider
      %li
        %a{href: "#"} Enrollment

  %li.dropdown
    %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
      Locations
      %b.caret
    %ul.dropdown-menu
      %li
        = link_to "All Locations", locations_path
      %li.divider
        -@locations.each do |location|
          %li
            = link_to "#{location.city}, #{location.state}",locations_path(@location)
      %li.divider
      %li
        %a{href: "#"} Add New Location
      %li.divider
      %li
        = link_to "Create New Location", new_location_path(@location)

  %li.dropdown.active
    %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
      Courses
      %b.caret
    %ul.dropdown-menu
      %li
        = link_to "All courses", location_courses_path(@location)
      %li.divider
        -@courses.each do |course|
          %li
            = link_to "#{course.name}",location_course_path(@location, course)
      %li.divider
      %li
        %a{href: "#"} Enroll in a New Course
      %li.divider
      %li
        = link_to "Create New Course", new_location_course_path(@location)

  %li.dropdown.pull-right
    %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
      #{current_user.email}
      %b.caret
    %ul.dropdown-menu
      %li
        /here the access type (admin or student) would go
        %strong Access Type: Student
      %li
        #user_nav
          - if user_signed_in?
            Not you?
            \#{link_to "Sign out", destroy_user_session_path, :method => :delete}
          - else
            = link_to "Sign up", new_user_registration_path
            or #{link_to "sign in", new_user_session_path}