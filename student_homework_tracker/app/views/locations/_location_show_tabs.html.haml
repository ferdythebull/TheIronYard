%ul#myTab.nav.nav-tabs
  - @locations.each do |location|
    %li
      %a{href: "##{location.id}"} #{location.city}

#content.tab-content
  - @locations.each do |location|
    .tab-pane{id: location.id}
      %div.accordion
        %h3
          %a{href:'#'}Address
        %div
          =location.street
          %br
          =location.city
          ,
          =location.state
          %br
          =location.zipCode
        %h3
          %a{href:'#'}Location Controls
        %div
          =link_to "Edit", edit_location_path(location)
          |
          =link_to "Delete", location_path(location), method: :delete
        %h3
          %a{href: '#'}Classes
        %div
=link_to "Class List", location_courses_path(@location)