%ul.nav.nav-pills
  %li.dropdown.active
    %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
      Locations
      %b.caret
    %ul.dropdown-menu
      %li
        = link_to "All Locations", locations_path(@location)
      %li.divider
        -@locations.each do |location|
          %li
            = link_to "#{location.city}, #{location.state}",location_path(location)
      %li.divider
      %li
        %a{href: "#"} Add New Location
      %li.divider
      %li
        = link_to "Create New Location", new_location_path(@location)
  %li.dropdown.pull-right
    %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
      #{current_user.email}
      %b.caret
    %ul.dropdown-menu
      %li
        /here the access type (admin or student) would go
        %strong Access Type: Student
      %li
        #user_nav
          - if user_signed_in?
            Not you?
            \#{link_to "Sign out", destroy_user_session_path, :method => :delete}
          - else
            = link_to "Sign up", new_user_registration_path
            or #{link_to "sign in", new_user_session_path}