= form_for @location, html: {role: "form", class: "form-horizontal"} do |f|
  - if @location.errors.any?
    #error_explanation
      %h2= "#{pluralize(@location.errors.count, "error")} prohibited this location from being saved:"
      %ul
        - @location.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :street
    = f.text_field :street

  .form-group
    = f.label :city
    = f.text_field :city

  .form-group
    = f.label :state, class: "col-lg-2"
    .col-lg-10
      = f.select :state, options_for_select(Location::STATE, @location.state), include_blank: "--- Select ---"
  .form-group
    = f.label :zip_code
    = f.text_field :zip_code

  .form-group
    = f.label :phone_number
    = f.text_field :phone_number

  = f.submit 'Save', class: "btn btn-default"