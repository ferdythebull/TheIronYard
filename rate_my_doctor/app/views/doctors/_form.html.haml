= form_for @doctor, html: {role: "form", class: "form-horizontal"} do |f|
  - if @doctor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@doctor.errors.count, "error")} prohibited this location from being saved:"
      %ul
        - @doctor.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name
    = f.text_field :name

  .form-group
    = f.label :sex
    = f.text_field :sex

  .form-group
    = f.label :birth_date
    = f.text_field :birth_date

  .form-group
    = f.label :nationality, class: "col-lg-2"
    .col-lg-10
      = f.select :nationality, options_for_select(Doctor::NATIONALITY, @doctor.nationality), include_blank: "--- Select ---"

  .form-group
    = f.label :university
    = f.text_field :university

  .form-group
    = f.label :graduation_date
    = f.text_field :graduation_date

  = f.submit 'Save', class: "btn btn-default"