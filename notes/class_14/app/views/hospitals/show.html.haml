.box
  .title
    %h3 Hospital Info: #{@hospital.name}
  .align-center
    .navbar
      .create-new
        = link_to "Go Back", root_path
  .box-bg
    %table
      %tr
        %td
          %table
            %tr
              %td
                Location:
              %td
                = @hospital.location
            %tr
              %td
                Search for a patient:
              %td
                = render 'hospitals/search'
      %tr
        %td
          %table
            %tr
              %td
                = link_to "Edit Hospital", edit_hospital_path(@hospital)
              %td
                = link_to "New Patient", new_hospital_patient_path(@hospital)
              %td
                = link_to "Add a Doctor", new_doctor_hospital_path(@hospital)
      %tr
        %td
          %table
            %tr
              %td
                %table
                  %tr
                    %td
                      %h1 Patients at Hospital
            %tr
              %td
                %table
                  %tr
                    %th
                      Patient Name
                    %th
                      Workflow State
                    %th
                      Workflow Links
                  - @patients_processing.each_slice(10) do |patient1, patient2, patient3, patient4, patient5, patient6, patient7, patient8, patient9, patient10|
                    - if patient1
