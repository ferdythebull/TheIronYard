<h1>Create a new post.</h1>

<%= form_for @post do |f| %>
  <strong><%= f.label :title %></strong>
  <%= f.text_field :title, placeholder: "Title" %>
  <br>
  <strong><%= f.label :text %></strong>
  <%= f.text_field :text, placeholder: "Write blog post here.." %>
  <br>
  <%= f.submit "Create Post" %>
  <% end %>